@model IEnumerable<WebGymTrivelloniBattaglioli.Models.TrainerModel>
@{
    Layout = null;
}

<html>
<head>
    <link rel="stylesheet" type="text/css" href="../Content/bootstrap.min.css">
    <link rel="stylesheet" type="text/css" href="../Content/font-awesome.css">
    <link rel="stylesheet" href="../Content/templatemo-training-studio.css">
    <title>Scheda Assente!</title>
</head>
<body>
    <section class="section" id="call-to-action">
        <div class="container">
            <div class="row">
                <div class="col-lg-10 offset-lg-1">
                    <div class="cta-content">
                        <h2>Richiedi la tua<em> scheda</em></h2>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <section class="section" id="trainers">
        <div class="container">
            <div class="row">
                <div class="col-lg-6 offset-lg-3">
                    <div class="section-heading">
                        <h2>Contatta <em> Allenatore</em></h2>
                        <img src="../Images/line-dec.png" alt="">
                        <p>Ops! Qualcosa è andato storto: sembra che non ti sia stata ancora assegnata una scheda oppure quest'ultima è assente. Compila il seguente form e richiedi al trainer una scheda.</p>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <div>

        @using (Html.BeginForm("ContattaAllenatore", "Home"))
        {
            <center>
                @Html.AntiForgeryToken()
                <select id="lista_trainer" name="lista_trainer" style="background-color:#ed563b; color:white; border-radius: 0.25rem; text-align:center; outline: none; height:40px">
                    @foreach (var t in Model)
                    {
                        <option value="@t.Codice_fiscale">@t.Nome @t.Cognome</option>
                    }
                </select>
            </center>
            <center>
                <input type="submit" value="Contatta il tuo allenatore per richiedere una nuova scheda" style="color: white; background-color: #ed563b; display: inline-block; font-size: 13px; padding: 11px 17px; text-align: center; font-weight: 400; border: none; outline: none; margin-top:3% " />
            </center>
        }
    </div>
</body>
</html>
