@model WebGymTrivelloniBattaglioli.Models.SchedaModel

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>ShowScheda</title>
</head>
<body>
    <center>
        <div>
            <h4>Dettagli scheda</h4>
            <hr />
            <dl class="dl-horizontal">
                <dt>
                    @Html.DisplayNameFor(model => model.Titolo)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Titolo)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Durata)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Durata)
                </dd>
            </dl>
        </div>
        <h4>Dati allenatore che ti ha preparato la scheda</h4>
        Nome:@Model.Trainer.Nome
        Cognome:@Model.Trainer.Cognome
        Mail:@Model.Trainer.Email
        <h4 style="font-size: 24px; font-weight: 700; color: #ed563b; display:inline;">LISTA</h4><h4 style="font-size: 24px; font-weight: 700; color: #ed563b; display:inline;"> esercizi</h4>
        <table style="border-style: groove; text-align: left; margin-bottom: 5%; margin-top: 3%; margin-left:auto; margin-right:auto;">
            <tr>
                <th style="font-size: 20px; font-weight: 700; color: #ed563b;">
                    Descrizione
                </th>
                <th style="font-size: 20px; font-weight: 700; color: #ed563b;">
                    Visualizzazione
                </th>
                <th style="font-size: 20px; font-weight: 700; color: #ed563b;">
                    Numero ripetizioni
                </th>
                <th style="font-size: 20px; font-weight: 700; color: #ed563b;">
                    Recupero
                </th>
                <th style="font-size: 20px; font-weight: 700; color: #ed563b;">
                    Commento dell'allenatore
                </th>
            </tr>
            @{ 
                int @i = 0;
            }
                @foreach (var item in Model.Esercizi)
                {
        <tr>
            <td style="font-size: 20px; font-weight: 700; color: #232d39;">
                @Html.DisplayFor(modelItem => item.Descrizione)
            </td>
            <td style="font-size: 20px; font-weight: 700; color: #232d39;">
                <img src="@Html.DisplayFor(modelItem => item.Immagine)" style="height:100px;width:100px" />
            </td>
            <td style="font-size: 20px; font-weight: 700; color: #232d39;">
                @Model.Caratteristiche_esercizi[@i].Numero_ripetizioni
            </td>
            <td style="font-size: 20px; font-weight: 700; color: #232d39;">
                @Model.Caratteristiche_esercizi[@i].Recupero
            </td>
            <td style="font-size: 20px; font-weight: 700; color: #232d39;">
                @Model.Caratteristiche_esercizi[@i].Commento
            </td>
        </tr>
                    i++; 
                 }
        </table>
    </center>
    <p>
        @Html.ActionLink("Indietro", "MainPageClient")
    </p>
</body>
</html>
