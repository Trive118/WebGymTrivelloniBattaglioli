            @Html.AntiForgeryToken()
            <textarea name="messaggio"></textarea>
            <input style="display:none" value="@Model.Mail_trainer" name="mail_trainer"/>
            <input type="submit" value="Invia mail" />
        }
    </div>
</body>
</html>
